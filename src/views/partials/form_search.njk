<pm-search>
	<form method="GET" action="/search">
		<div class="form_row">
			<label for="input_search_query">Search for a song:</label>
			<div class="form_field">
				<input type="search" name="query_text" id="input_search_query" value="{{ query }}" required>
			</div>
		</div>
		<div class="form_actions">
			<button type="submit">Search</button>
		</div>
	</form>
</pm-search>